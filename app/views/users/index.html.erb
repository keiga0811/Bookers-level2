<div class="container">
	<div class="row">

	<div class='col-xs-3'>
			<h2>User info</h2>
			<%= image_tag '240ec862387d03003cb4c41cd93cb0be.png', :size =>'100x100' %>
			<table  class="table">
				<tbody>
					<tr>
						<td>name</td>
						<td><%= @user.name %></td>
					</tr>
					<tr>
						<td>introduction</td>
						<td><%= @user.introduction %></td>
					</tr>
				</tbody>
			</table>
			<%= link_to "編集", edit_user_path(current_user.id) %>

		<h2>New book</h2>
		<%= form_for(@book) do |f| %>
		<p>Title</p>
		<%= f.text_field :title %>
		<p>Opinion</p>
		<%= f.text_area :body %>
		<%=f.submit "Create Book"%>
		<% end %>
	</div>

		<div class="col-xs-9">
			<table class="table">
				<h2>Users</h2>
				<thead>
					<tr>
						<th>image</th>
						<th>name</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @users.each do |user| %>
					<tr>
						<td><%= attachment_image_tag user, :profile_image, :size =>'30x30', fallback: "240ec862387d03003cb4c41cd93cb0be.png" %></td>
						<td><%= user.name %></td>
						<td><%= link_to "Show", user_path(user.id) %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>

	</div>
</div>