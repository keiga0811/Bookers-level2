<div class="container">
	<div class="row">
		<div class="col-lg-9">
			<h2>User info</h2>
			<%= form_for(@user) do |f| %>
			<p>name</p>
			<%= f.text_field :name %>
			<p>image</p>
			<%= f.attachment_field :profile_image %>

			<p>introduction</p>
			<%= f.text_area :introduction %>
			<%= f.submit %>
			<% end %>
		</div>
</div>
	</div>
</div>